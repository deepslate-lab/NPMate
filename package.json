{
  "name": "npmate",
  "version": "1.1.0",
  "description": "NPMate - Node.js Project Manager with Windows Startup Support",
  "main": "src/main/index.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "dist": "electron-builder --publish=never"
  },
  "keywords": [
    "nodejs",
    "server",
    "manager",
    "electron",
    "development",
    "process-control",
    "windows"
  ],
  "author": "DeepslateLab",
  "license": "MIT",
  "devDependencies": {
    "electron": "^37.4.0",
    "electron-builder": "^24.0.0"
  },
  "build": {
    "appId": "com.deepslatelab.npmate",
    "productName": "NPMate",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "main/**/*",
      "renderer/**/*",
      "controller/**/*",
      "registry/**/*",
      "data/**/*",
      "assets/**/*",
      "node_modules/**/*",
      "package.json",
      "!node_modules/.bin",
      "!node_modules/.cache"
    ],
    "extraResources": [
      {
        "from": "data/",
        "to": "data/",
        "filter": ["**/*"]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icon.ico",
      "requestedExecutionLevel": "asInvoker",
      "publisherName": "DeepslateLab",
      "sign": null,
      "verifyUpdateCodeSignature": false
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "NPMate",
      "installerIcon": "assets/icon.ico",
      "uninstallerIcon": "assets/icon.ico",
      "installerHeaderIcon": "assets/icon.ico"
    },
    "directories": {
      "buildResources": "build"
    },
    "compression": "maximum"
  }
}